<h1>Sign Up Confirmation</h1>
<h3>Are you sure these values are correct?</h3>

<p>Name: <%= params[:user][:name]  %></p>
<p>Email: <%= params[:user][:email] %> </p>

<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success inline' %>
    <%#= link_to "Yes", users_path(params: params), method: :post, class: 'btn btn-success inline' %>

    <%= link_to "No", new_user_path, class: 'btn btn-danger' %>
  </div>
</div>
