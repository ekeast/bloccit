<h1>All Posts</h1>
 # #12
 <% @posts.each_with_index do |post, index| %>
   <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <% if index == 0 || index % 5 == 0 %>
              <% post.title = "SPAM" %>
              <%= link_to post.title, post %>
         <% else %>
              <%= link_to post.title, post %>
         <% end %>
       </h4>
     </div>
   </div>

 <% end %>
